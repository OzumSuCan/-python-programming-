print("VÜCUT KİTLE ENDEKSİ HESAPLAMA PROGRAMI")
boy = float(input("Boy (m):"))
kilo = int(input("Kilo (kg):"))
 
endeks  = kilo/(boy*boy)
 
if endeks <=18:
    print("\n zayıf kitle indeksi:{}".format(endeks))
elif endeks > 18 and endeks <=25 :
    print("\n kilolu kitle indeksi:{}".format(endeks))
elif endeks > 25 and endeks <=30:
    print("\n obez kitle indeksi:{}".format(endeks))
elif endeks > 30:
    print("\n ciddi obez kitle indeksi:{}".format(endeks))
else:
    print("tekrardan yazınız.")
